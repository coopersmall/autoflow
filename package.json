{
  "name": "autoflow",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "ajv": "^8.17.1",
      "zod": "^3.24.2",
      "neverthrow": "^8.2.0",
      "nanoid": "^5.1.5",
      "lodash": "^4.17.21",
      "@types/json-schema": "^7.0.15",
      "@types/lodash": "^4.17.20"
    },
    "catalogs": {
      "backend": {
        "drizzle-orm": "^0.44.5",
        "postgres": "^3.4.7",
        "ioredis": "^5.8.2",
        "bullmq": "^5.64.1",
        "pino": "^9.11.0",
        "jose": "^6.0.11",
        "immer": "^11.0.1",
        "@google-cloud/storage": "^7.18.0",
        "google-auth-library": "^10.5.0"
      },
      "ai": {
        "ai": "^5.0.56",
        "@ai-sdk/anthropic": "^2.0.20",
        "@ai-sdk/openai": "^2.0.38",
        "@ai-sdk/google": "^2.0.17",
        "@ai-sdk/groq": "^2.0.22",
        "@openrouter/ai-sdk-provider": "^1.2.0"
      },
      "react": {
        "react": "^19",
        "react-dom": "^19",
        "react-cookie": "^8.0.1",
        "react-hook-form": "^7.61.1"
      },
      "ui": {
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-select": "^2.1.6",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/themes": "^3.2.1",
        "lucide-react": "^0.475.0",
        "tailwindcss": "^4.0.6",
        "tailwind-merge": "^3.0.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1"
      }
    }
  },
  "scripts": {
    "dev": "bun --filter '@autoflow/api' dev",
    "dev:api": "bun --filter '@autoflow/api' dev",
    "dev:worker": "bun --filter '@autoflow/worker' dev",
    "dev:web": "bun --filter '@autoflow/web-server' dev",
    "dev:all": "bun --filter '*' dev",
    "start": "bun --filter '@autoflow/api' start",
    "start:api": "bun --filter '@autoflow/api' start",
    "start:worker": "bun --filter '@autoflow/worker' start",
    "start:web": "bun --filter '@autoflow/web-server' start",
    "build": "bun --filter '*' build",
    "test": "bun test packages apps --ignore '**/integration*'",
    "test:integration": "bun test packages apps --filter '*.integration.*'",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "tsc": "tsc --noEmit",
    "db:push": "bun --filter '@autoflow/backend' db:push",
    "db:generate": "bun --filter '@autoflow/backend' db:generate",
    "db:migrate": "bun --filter '@autoflow/backend' db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20251220.1",
    "fast-check": "^4.4.0"
  }
}
